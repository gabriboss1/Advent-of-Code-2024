def is_good(xs):
    if xs == sorted(xs) or xs == sorted(xs, reverse=True):
        return all(1 <= abs(xs[i] - xs[i + 1]) <= 3 for i in range(len(xs) - 1))
    return False

with open("input 2.txt") as file:
    data = [line.strip("\n") for line in file]

tot, t = 0, 0

for line in data:
    data1 = [int(x) for x in line.split()]
    tot += is_good(data1)
    t += any(is_good(data1[:j] + data1[j+1:]) for j in range(len(data1)))

print(tot)
print(t)
