with open("input 2.txt") as file:
    data = [line.strip() for line in file]

def is_good(xs):
    return (xs == sorted(xs) or xs == sorted(xs, reverse=True)) and all(1 <= abs(xs[i] - xs[i + 1]) <= 3 for i in range(len(xs) - 1))

tot1, tot2 = 0, 0
for line in data:
    xs = [int(x) for x in line.split()]
    tot1 += is_good(xs)
    tot2 += any(is_good(xs[:j] + xs[j+1:]) for j in range(len(xs)))

print(tot1)
print(tot2)
